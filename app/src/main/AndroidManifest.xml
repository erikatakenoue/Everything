<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.shiningplace.erika.takenoue.everything">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>

    <application
        android:name=".BookApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ManualActivity"
            android:label="手動登録"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jp.shiningplace.erika.takenoue.everything.MainActivity" />
        </activity>
        <activity android:name=".BarcodeActivity"
            android:label="バーコードから登録"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jp.shiningplace.erika.takenoue.everything.MainActivity"/>
        </activity>
        <activity android:name=".SearchActivity"
            android:label="検索から登録"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jp.shiningplace.erika.takenoue.everything.MainActivity"/>
        </activity>
        <activity android:name=".SearchListActivity"
            android:parentActivityName=".SearchActivity"
            android:label="検索結果"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".DetailActivity"
            android:label="詳細画面"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".DetailViewPagerActivity"
            android:label="本の詳細"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".EditingActivity"
            android:parentActivityName=".DetailViewPagerActivity"
            android:label="編集画面"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".SettingActivity"
            android:parentActivityName=".MainActivity"
            android:label="設定"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".BackupActivity"
            android:parentActivityName=".MainActivity"
            android:label="バックアップ"
            android:theme="@style/AppTheme">
        </activity>

    </application>

</manifest>