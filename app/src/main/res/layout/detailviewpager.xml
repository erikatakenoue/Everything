<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ImageView
        android:id="@+id/imageDetail2"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/titleDetail2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageDetail2" />

    <TextView
        android:id="@+id/authorDetail2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageDetail2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageDetail2" />

    <TextView
        android:id="@+id/publisherDetailText2"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageDetail2"
        android:layout_marginTop="20dp"
        android:text="出版社" />

    <TextView
        android:id="@+id/publisherDetailView2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/imageDetail2"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/publisherDetailText2" />

    <TextView
        android:id="@+id/dateDetailText2"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/publisherDetailText2"
        android:layout_marginTop="10dp"
        android:text="発売日" />

    <TextView
        android:id="@+id/dateDetailView2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/publisherDetailView2"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/dateDetailText2"/>

    <TextView
        android:id="@+id/sizeDetailText2"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dateDetailView2"
        android:layout_marginTop="10dp"
        android:text="分類" />

    <TextView
        android:id="@+id/sizeDetailView2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/dateDetailText2"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/sizeDetailText2" />

    <TextView
        android:id="@+id/itemCaptionDetailText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sizeDetailText2"
        android:layout_marginTop="10dp"
        android:text="概要" />

    <TextView
        android:id="@+id/itemCaptionDetailView2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
       android:layout_below="@+id/itemCaptionDetailText2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/memoText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/itemCaptionDetailView2"
        android:layout_marginTop="10dp"
        android:text="メモ" />

    <TextView
        android:id="@+id/memoView2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/memoView2"
        android:layout_alignParentStart="true" />

</RelativeLayout>